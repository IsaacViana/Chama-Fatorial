#include <stdio.h>
#include <stdlib.h>

int fator(int num, int fatorial);

int main()
{
    int num;
    int fatorial;

    printf("Digite o numero do qual quer o fatorial: \n");
    scanf("%d", &num);

    fatorial = 1;

    fatorial = fator(num, fatorial);

    printf("Este eh o fatorial: %d", fatorial);
}

int fator(int num, int fatorial)
{
    fatorial = 1;
    while(num > 0)
     {
        fatorial = fatorial * num;
        num = --num;
     }
        return (fatorial);
}
